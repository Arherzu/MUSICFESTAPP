@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrate";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-lg-6" style="float:none;margin:auto;">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Crea una cuenta</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Ingrese su email</label>
                <input asp-for="Input.Email" class="form-control rounded-pill bg-secondary text-white" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Ingrese una contraseña</label>
                <input asp-for="Input.Password" class="form-control rounded-pill bg-secondary text-white" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Re-ingrese su contraseña</label>
                <input asp-for="Input.ConfirmPassword" class="form-control rounded-pill bg-secondary text-white" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn rounded-pill btn-dark btn-block">Register</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
